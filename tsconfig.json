{
  "compilerOptions": {
    "target": "es6", 
    "allowJs": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "firebase/*": ["node_modules/firebase/*/index"],
      "ws": ["node_modules/ws/index"],
      "xmlhttprequest": ["node_modules/xmlhttprequest/lib/XMLHttpRequest"],
      "emberfire": [ "addon" ],
      "emberfire/*": [ "addon/* "],
      "emberfire/authorizers/firebase": ["addon/authorizers/firebase"],
      "emberfire/authenticators/firebase": [ "addon/authenticators/firebase"],
      "emberfire/initializers/emberfire": [ "addon/initializers/emberfire"],
      "emberfire/services/firebase": [ "addon/services/firebase"],
      "emberfire/services/firebase-app": [ "addon/services/firebase-app"],
      "*": [ "types/*" ]
    }
  },
  "include": [ "addon", "app", "types" ],
  "exclude": [ "node_modules", "**/*.spec.ts" ]
}
